@model IEnumerable<Department>

<div class="d-flex justify-content-center">
    <h2>Departments Portal</h2>
</div>

<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Department Id</th>
            <th scope="col">Department Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DeptName</td>
                <td>
                    <a href="~/Department/ViewDetails/@item.Id" class="btn btn-primary mx-2">View</a>
                    <a href="~/Department/Edit/@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <a href="~/Department/Delete/@item.Id" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Department/Create" class="btn btn-success">Add Department</a>
    </tfoot>
</table>