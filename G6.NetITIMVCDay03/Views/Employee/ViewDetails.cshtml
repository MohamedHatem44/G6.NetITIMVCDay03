@model Employee


<div class="card" style="width: 25rem;">
    <div class="card-body">
        <h5 class="card-title">Employee Name: @Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">Employee Id: @Model.Id</h6>
        <h6 class="card-subtitle mb-2 text-muted">Employee Age: @Model.Age</h6>
        <h6 class="card-subtitle mb-2 text-muted">Employee Salary: @Model.Salary</h6>
        <h6 class="card-subtitle mb-2 text-muted">Department: @Model.Department!.DeptName</h6>
        <a href="~/Employee/Index" class="btn btn-primary mt-3">Back</a>
    </div>
</div>