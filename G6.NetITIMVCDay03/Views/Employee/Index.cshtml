@model IEnumerable<Employee>

<div class="d-flex justify-content-center">
    <h2>Employees Portal</h2>
</div>

<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Department</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Salary</td>
                <td>@item.Department!.DeptName</td>
                <td>
                    <a href="~/Employee/ViewDetails/@item.Id" class="btn btn-primary mx-2">View</a>
                    <a href="~/Employee/Edit/@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <a href="~/Employee/Delete/@item.Id" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Employee/Create" class="btn btn-success">Add Employee</a>
    </tfoot>
</table>