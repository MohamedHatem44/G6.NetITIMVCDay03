@model Employee

<div class="d-flex justify-content-center">
    <h1>Edit Employee</h1>
</div>

<br />
<br />
<br />

<form action="~/Employee/Edit" method="post">

    <div class="form-group">
        <input type="number" id="Id" name="Id" class="form-control" value="@Model.Id" hidden/>
    </div>

    <div class="form-group">
        <label for="Name" class="form-label">Employee Name</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label for="Age" class="form-label">Employee Age</label>
        <input type="number" id="Age" name="Age" class="form-control" value="@Model.Age" />
    </div>

    <div class="form-group">
        <label for="Salary" class="form-label">Employee Salary</label>
        <input type="number" id="Salary" name="Salary" class="form-control" value="@Model.Salary" />
    </div>

    <div class="form-group">
        <label for="DepartmentId" class="form-label">Department</label>
        <select id="DepartmentId" name="DepartmentId" class="form-control">
            <option value="@Model.DepartmentId">@Model.Department!.DeptName</option>
            @foreach (var item in ViewBag._Departments)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>



    <input type="submit" value="Edit Employee" class="btn btn-success my-5" />
    <a href="~/Employee/Index" class="btn btn-secondary">Cancel</a>

</form>